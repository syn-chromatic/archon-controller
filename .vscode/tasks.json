{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Archon Receiver Firmware",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--profile",
                "${input:profiles}",
                "--package",
                "archon-receiver",
                "--config",
                ".cargo/runners/${input:runner}.toml",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Archon Transmitter Firmware",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--profile",
                "${input:profiles}",
                "--package",
                "archon-transmitter",
                "--config",
                ".cargo/runners/${input:runner}.toml",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Attach Archon Transmitter",
            "type": "shell",
            "command": "probe-rs attach --chip RP2040 --protocol swd ./target/thumbv6m-none-eabi/${input:targets}/archon-transmitter",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Attach Archon Receiver",
            "type": "shell",
            "command": "probe-rs attach --chip RP2040 --protocol swd ./target/thumbv6m-none-eabi/${input:targets}/archon-receiver",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "profiles",
            "type": "pickString",
            "description": "Specify Profile",
            "options": [
                "dev",
                "dev-optimized",
                "release",
                "release-optimized"
            ]
        },
        {
            "id": "targets",
            "type": "pickString",
            "description": "Specify Target",
            "options": [
                "debug",
                "release",
            ]
        },
        {
            "id": "runner",
            "type": "pickString",
            "description": "Specify Runner",
            "options": [
                "flash",
                "flash-and-probe",
                "uf2",
            ],
            "default": "flash-and-probe",
        }
    ]
}